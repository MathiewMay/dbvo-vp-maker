{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "DBVO Voice Pack Maker",
    "version": "1.2.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true
      },
      "shell": {
        "execute": true,
        "sidecar": true,
        "scope": [
          { "name": "./bin/ffmpeg", "sidecar": true, "args": true },
          { "name": "./bin/FaceFXWrapper", "sidecar": true, "args": true }
        ],
        "all": true,
        "open": true
      },
      "fs": {
        "exists": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeDir": true,
        "copyFile": true,
        "removeFile": true,
        "scope": ["*", "**/*", "/**/*"]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/DBVO_no_title.ico"
      ],
      "externalBin": [
        "./bin/ffmpeg",
        "./bin/FaceFXWrapper"
      ],
      "identifier": "ca.mathiew.dbvovpm",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "DBVO Voice Pack Maker 1.2.1",
        "width": 800,
        "height": 800
      }
    ]
  }
}
